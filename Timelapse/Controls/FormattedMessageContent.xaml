<UserControl x:Class="Timelapse.Controls.FormattedMessageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <!--NOTE: This control was created using AI prompting-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Area with Icon and Title -->
        <Border Grid.Row="0" 
                Background="LightGray" 
                BorderBrush="Gray" 
                BorderThickness="0,1,0,1" 
                Padding="10"
                Name="HeaderBorder"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <ContentPresenter Name="IconPresenter" 
                                Grid.Column="0"
                                VerticalAlignment="Center" 
                                Margin="0,0,10,0"/>
                <TextBlock Name="HeaderTitle" 
                         Grid.Column="1"
                         FontSize="16" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center"
                         TextWrapping="Wrap"/>
                <CheckBox Name="HideText" Content="_Hide explanation" Grid.Column="2" Visibility="Collapsed" Margin="10,10,5,0" VerticalAlignment="Center" Checked="HideTextButton_StateChange" Unchecked="HideTextButton_StateChange" IsThreeState="False" />
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Row="1" 
                Name="ContentAreaBorder"
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="10">
                <StackPanel Name="ContentPanel" Orientation="Vertical">
                    <!-- Content will be added programmatically -->
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>