<Window x:Class="Timelapse.Controls.FormattedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Timelapse.Controls"
        Title="Formatted Message" 
        Height="400" 
        Width="600"
        MinHeight="150"
        MinWidth="400"
        MaxHeight="800"
        MaxWidth="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        SizeToContent="Manual" Loaded="FormattedDialog_OnLoaded">

    <!--NOTE: This control was created using AI prompting-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Message Content Area -->
        <local:FormattedMessageContent Grid.Row="0" Grid.ColumnSpan="2"
                                      x:Name="MessageContent"/>
        <CheckBox Name="DontShowAgain" x:FieldModifier="public" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Content="_Don't show this message again." Margin="10,0,10,0"  Visibility="Collapsed" />
        <!-- Button Area -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button Name="ExtraButton"
                    Content="Ignore me" 
                    Width="Auto" 
                    Height="30" 
                    Padding="5,0"  
                    Margin="0,0,40,0" 
                    Visibility="Collapsed"/>
            <Button Name="YesButton" 
                    Content="Yes" 
                    Width="80" 
                    Height="30" 
                    Margin="5,0" 
                    Click="YesButton_Click" 
                    Visibility="Collapsed"/>
            <Button Name="NoButton" 
                    Content="No" 
                    Width="80" 
                    Height="30" 
                    Margin="5,0" 
                    Click="NoButton_Click" 
                    Visibility="Collapsed"/>
            <Button Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="30" 
                    Margin="5,0" 
                    Click="OkButton_Click" 
                    Visibility="Collapsed"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="5,0" 
                    Click="CancelButton_Click" 
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>