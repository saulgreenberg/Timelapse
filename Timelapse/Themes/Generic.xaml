        </Setter>
        <Style.Triggers>
            --><!-- Trigger when control has focus --><!--
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessCommonHighlight}" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrushCommonHighlight}" />
            </Trigger>

            --><!-- Trigger when mouse is over control --><!--
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessCommonHighlight}" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrushCommonHighlight}" />
            </Trigger>
        </Style.Triggers>-->
    </Style>
</ResourceDictionary>