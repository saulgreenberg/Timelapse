<Window x:Class="Timelapse.Dialog.ShowRtfFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Timelapse.Controls"
        mc:Ignorable="d"
        MinHeight="480" MinWidth="768"
        Height="600" Width="768" Loaded="Window_Loaded">
    <DockPanel>
        <controls:FormattedMessageContent x:Name="Message" DockPanel.Dock="Top" Icon="{x:Static controls:DialogIconType.Information}"/>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="NoButton" IsCancel="True" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Padding="10" Margin="10,10,10,10" Click="NoButton_Click">Cancel</Button>
                <Button Name="YesButton" IsDefault="True" AutomationProperties.AutomationId="OkButton" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Padding="10" Margin="10,10,10,10" Click="YesButton_Click" IsEnabled="True">Okay</Button>
            </StackPanel>
            <Rectangle Fill="#FF868686" Height="2" HorizontalAlignment="Stretch" DockPanel.Dock="Top"/>
            <Rectangle Fill="#FF868686" Height="2" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom"/>
            <FlowDocumentScrollViewer Name="RtfFlowDocumentScrollViewer" MinHeight="100" MinWidth="100" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>
    </DockPanel>
</Window>
