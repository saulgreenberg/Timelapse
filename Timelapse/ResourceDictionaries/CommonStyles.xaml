<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Brush Colors-->
    <SolidColorBrush x:Key="BorderBrushCommonNormal" Color="LightBlue" />
    <SolidColorBrush x:Key="BorderBrushCommonHighlight" Color="Blue" />

    <!--Brush Thicknesses-->
    <Thickness  x:Key="BorderThicknessCommonNormal">1</Thickness>
    <Thickness  x:Key="BorderThicknessCommonHighlight">2</Thickness>

    <Storyboard x:Key="ColorAnimationBriefFlash">
        <ColorAnimation From="PaleGoldenrod" To="Black" 
                                    Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                                    AutoReverse="True"
                                    Duration="0:0:0.2"
                                    RepeatBehavior="1x"/>
    </Storyboard>

</ResourceDictionary>