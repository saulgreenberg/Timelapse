<UserControl x:Class="Timelapse.Controls.FileMetadataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             x:Name="MainWindow"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Row 0: Select from the available Metadata tools (via Radio buttons)-->
        <StackPanel Name="ToolSelectionPanel" Grid.Row="0" Orientation="Horizontal" >
            <Label Content="Choose a metadata inspection tool:" FontWeight="Bold" Margin="5,0,20,0"/>
            <RadioButton Name="ExifToolRB" Content="ExifTool (slower, more comprehensive)" IsChecked="True" VerticalAlignment="Center"  GroupName="MetadataToolType"/>
            <RadioButton Name="MetadataExtractorRB" Content="MetadataExtractor (faster)" VerticalAlignment="Center" GroupName="MetadataToolType" Margin="15,0,0,0"/>
        </StackPanel>

        <!--Row 1: Display the example file name with buttons on the right-->
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Button Name="AssignXmpTimelapseDataButton"
                    Content="Select matching data fields"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,10,2"
                    Padding="10,5"
                    Click="AssignXmpTimelapseDataButton_Click"
                    IsEnabled="False"
                    ToolTip="Automatically select the Data Field for XMP-TimelapseData &#x0a;if its Metatdata name corresponds to a dropdown menu item's data label"/>
            <Button Name="SortByXmpTimelapseDataButton"
                    Content="Sort by metadata group"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,10,2"
                    Padding="10,5"
                    Click="SortByXmpTimelapseDataButton_Click"
                    IsEnabled="False"
                    ToolTip="Sort metadata by directory and scroll to the first XMP-TimelapseData entry"/>
            <Label Name="XmpTimelapseDataLabel"
                   Content="XMP-TimelapseData:"
                   DockPanel.Dock="Right"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Margin="0,0,5,2"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Example file:" Height="28" Margin="5,0,0,0" HorizontalContentAlignment="Left" FontSize="12" FontWeight="DemiBold" />
                <Label Name="lblFileName"
                       Height="28" 
                       Margin="0,0,0,0"
                       HorizontalAlignment="Stretch" HorizontalContentAlignment="Right"
                       FontSize="12" FontWeight="Normal"
                       Content="{Binding Path=FileNameDisplayable}"
                       ToolTip="{Binding Path=FilePath}"
                       />
            </StackPanel>
        </DockPanel>

        <!--Row 2: The data grid holds all the metadata, example values, and possible data labels-->
        <DataGrid Name="AvailableMetadataDataGrid"
                  Grid.Row="2"

                  ColumnWidth="*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10,0,10,0"
                  SelectionUnit="FullRow" SelectionMode="Single"
                  EnableRowVirtualization="False"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="True"
                  Sorting="AvailableMetadataDataGrid_Sorting"
                  ItemsSource="{Binding Path=MetadataList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

            <!--Column Header Style-->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="FontWeight" Value="DemiBold" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!--Column definitions-->
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" IsReadOnly="True" Visibility="Collapsed" Binding="{Binding MetadataKey}" Width="0"/>
                <DataGridTextColumn Header="Metadata group" IsReadOnly="True" Visibility="Visible" Binding="{Binding MetadataKind}" SortMemberPath="MetadataKind"/>
                <DataGridTextColumn Header="Metadata name" IsReadOnly="True" Binding="{Binding MetadataName}" SortMemberPath="MetadataName" Width="1*"/>
                <DataGridTextColumn Header="Example value from current file" IsReadOnly="True" Binding="{Binding MetadataValue}" CanUserSort="False" Width="1*"/>
                <DataGridTemplateColumn Header="Data field" CanUserSort="False" Width=".5*" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- ComboBox now uses per-row AvailableLabels filtered by metadata value type -->
                            <ComboBox
                                ItemsSource="{Binding AvailableLabels}"
                                SelectedItem="{Binding AssignedLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectionChanged="ComboBox_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="No compatible data fields available">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <d:ComboBox.DataContext>
                                    <d:DesignInstance />
                                </d:ComboBox.DataContext>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Type" IsReadOnly="True" Binding="{Binding AssignedType}" CanUserSort="False" Width=".4*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
