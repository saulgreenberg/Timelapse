<Window x:Class="Timelapse.Dialog.EpisodeOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:toolkit="clr-namespace:TimelapseWpf.Toolkit;assembly=TimelapseWpf.Toolkit"
        Title="Episode Options" Height="460" Width="750"  ResizeMode="NoResize" Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical"  Margin="2,0,1,3">
        <toolkit:FormattedMessageContent x:Name="Message" Margin="0,0,0,0" Icon="{x:Static toolkit:DialogIconType.Question}"
                            DialogTitle="Episode Options"
                            What="An [e]episode[/e] is a sequence of images triggered by motion, such as an animal moving through a scene. 
                                      [br 8]Timelapse identifies successive files as part an episode when the time difference between them is less than a time threshold. You can then have Timelapse show the episode information, which can help you consider those images as a set."
                            Hint="To determine the best time threshold:
                                      [ni] Check your motion-triggered image sequence to get a sense of the time difference between images,
                                      [ni] Then set the threshold to either the high end of those time differences or to a value that typically captures a related burst of activity. 
                                      [li 2] Long thresholds may incorrectly group unrelated images, e.g., a wind-triggered image connecting two unrelated sequences"/>
        <!-- Slow speed adjustment -->
        <GroupBox Margin="10,0,10,0" BorderThickness="0" Padding="10,0,0,0" FontWeight="Bold" FontSize="12" Width="710" HorizontalAlignment="Left">
            <GroupBox.Header>
                <Label Content="Set the time threshold"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
               
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="75" />
                    </Grid.ColumnDefinitions>
                    <Slider Name="TimeThresholdSlider" Grid.Row="0" Grid.Column="0" Width="400" Margin="0,5,0,0" HorizontalAlignment="Left"
                            IsSnapToTickEnabled="True" TickFrequency="1" SmallChange="1" LargeChange="10" VerticalAlignment="Top" />
                    <TextBlock Name="TimeThresholdText" Grid.Row="0" Grid.Column="1" Text="--" FontWeight="Normal" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                </Grid>

                <Button Name="ResetTimeThresholdSlider" Grid.Row="0" Grid.Column="1" Content="Reset" FontWeight="Normal" Height="30" Width="Auto" VerticalAlignment="Bottom" Click="ResetTimeThresholdSlider_Click" />
                <Button x:Name="OkButton" FontWeight="Normal" Margin="0,20" Grid.Row="1" Grid.Column="1" Content="Ok" Width="100" IsDefault="True" Height="40" Click="OkButton_Click" AutomationProperties.AutomationId="OkButton" />
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
