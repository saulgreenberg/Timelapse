<controls:BusyableDialogWindow  x:Class="Timelapse.Dialog.CustomSelectionWithEpisodes"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:controls="clr-namespace:Timelapse.Controls"
                                xmlns:toolkit="clr-namespace:TimelapseWpf.Toolkit;assembly=TimelapseWpf.Toolkit"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                mc:Ignorable="d"
                                Title="Select and view a  subset of your files"
                                MinHeight="640" MinWidth="705"
                                Height="900" Width="783"
                                ResizeMode="CanResizeWithGrip"
                                ShowInTaskbar="False"
                                WindowStartupLocation="CenterOwner"  Loaded="Window_Loaded" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/TreeViewHierarchicalDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <toolkit:FormattedMessageContent x:Name="Message" DockPanel.Dock="Top" Icon="{x:Static toolkit:DialogIconType.Question}"
                            DialogTitle="Select and View a Subset of your Files"
                            What="You may want to view only a subset of your images and videos that fit some criteria of interest to you."
                            Solution="Specify the search terms that describe your criteria. Expand the [b]Details[/b] section for basic instructions."
                            Result="Only those images and videos matching your search criteria will be displayed."
                            Hint="You can use this dialog to create simple to complex database queries. To unleash its full power, see the [e]Selecting subsets of files[/e] chapter in the [link:{x:Static constant:ExternalLinks.TimelapseGuideReference}|Timelapse Reference Guide]. "
                            Details="[ni][b]Basic usage[/b]:
                                      [ni 2] Click [b]Select[/b] to indicate which of your data fields you want to use for searching 
                                      [ni 2] Set [b]Expression[/b] and [b]Value[/b] to the desired search criteria.
                                      [ni 2] The bottom right of the dialog indicates how many matching files are found.
                                      [ni][b]Select recognitions[/b] is enabled only if your image set includes recognition data. You can:
                                        [li 2]search for particular detections and classifications within a confidence range;
                                        [li 2]include data fields in your search, as mentioned above in point 1.
                                     [ni][b]Glob Expressions[/b] are case sensitive and allow wildcards as follows:
                                       [li 2][b]*[/b] matches any number of characters;  
                                       [li 2][b]?[/b] matches any single character&#10;
                                       [li 2][b][abc][/b] matches one of the indicated characters; 
                                       [li 2][b][a-z][/b] matches one charecter in the range of indicated characters. 
                                      [ni]If you have selected multiple terms, indicate how those terms should be combined.
                                       [li 2][b]And[/b] returns only those images that match every single selected condition;
                                       [li 2][b]Or[/b] returns only those images that match at least one of the selected conditions."
                            ShowExplanationVisibility="True"/>
            <DockPanel DockPanel.Dock="Bottom">
                <Rectangle Fill="#FF868686" Height="2" DockPanel.Dock="Top"/>
                <Button Name="ResetToAllImagesButton" TabIndex="1000" Content="_Reset to All Images" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="10,0,0,0"  Padding="10" Click="ResetToAllImagesButton_Click" IsEnabled="False"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Name="MatchingFilesCount" HorizontalAlignment="Left"  Margin="10,5,0,5" VerticalAlignment="Center"  FontWeight="DemiBold" FontSize="12"><Run Text="0  "/></TextBlock>
                    <TextBlock Name="MatchingFilesCountLabel" HorizontalAlignment="Left"  Margin="0,5,0,5" VerticalAlignment="Center"  FontSize="12"><Run Text=" files match your query "/></TextBlock>
                    <Button Name="CancelButton" TabIndex="1002" IsCancel="True" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Padding="10" Margin="10,10,10,10" Click="CancelButton_Click">_Cancel</Button>
                    <Button Name="OkButton" TabIndex="1001" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Padding="10" Margin="10,10,10,10" Click="OkButton_Click">_Okay</Button>
                </StackPanel>
            </DockPanel>

            <!--Recognitions Area-->
            <Grid DockPanel.Dock="Top" Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="25"/>
                </Grid.RowDefinitions>

                <!--Recognitions Groupbox-->
                <GroupBox Name="RecognitionsGroupBox" Grid.Row="0" Grid.Column="0" Margin="3,0,10,0" BorderThickness="0" >
                    <GroupBox.Header >
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox Name="EnableRecognitionsCheckbox" TabIndex="0" Margin="10,0,5,0"  VerticalAlignment="Center" IsChecked="False" Checked="EnableRecognitions_CheckedChanged" Unchecked="EnableRecognitions_CheckedChanged"/>
                            <TextBlock Name="RecognitonsGroupBoxHeaderText" Text="Select recognitions" VerticalAlignment="Center" HorizontalAlignment="Left"  />
                            <TextBlock Name="RecognitonsGroupBoxFeedback" Text="" VerticalAlignment="Center" HorizontalAlignment="Left"  />
                        </StackPanel>
                    </GroupBox.Header>
                </GroupBox>
            </Grid>


            <!--Row 4 Option to show episode info -->
            <StackPanel Name="ShowEpisodeOptionsPanel" Orientation="Horizontal" Margin="32,0,0,0"  DockPanel.Dock="Top" >
                <CheckBox Name="CheckboxShowAllEpisodeImages" TabIndex="1"
                      VerticalContentAlignment="Center" FontWeight="DemiBold"
                      Content="Include all files in an episode when at least one file matches" IsChecked="False"
                      Checked="CheckboxShowAllEpisodeImages_CheckedChanged" Unchecked="CheckboxShowAllEpisodeImages_CheckedChanged"
                      ToolTip="Show all files in an episode where at least one file in that episode matches the search criteria"/>
            </StackPanel>

            <!--Selection Panel-->
            <GroupBox Name="SelectionGroupBox" Header="Select images and videos that match these terms " FontWeight="Bold" FontStyle="Italic" Height="Auto" DockPanel.Dock="Bottom" Margin="10,15,5,0" Padding="0,10,0,00">
                <DockPanel>
                    <ScrollViewer FontStyle="Normal">
                        <Grid Name="SearchTerms" Width="Auto" Height="Auto" DockPanel.Dock="Bottom">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" MinWidth="305"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Padding ="10,0,5,0" FontWeight="Bold" Text="Select" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Padding ="5,0,5,0" FontWeight="Bold" Text="Label" Grid.Row="0" Grid.Column="1"/>
                            <TextBlock Padding ="5,0,5,0" FontWeight="Bold" Text="Expression" Grid.Row="0" Grid.Column="2"/>
                            <TextBlock Padding ="5,0,5,0" FontWeight="Bold" Text="Value" Grid.Row="0" Grid.Column="3"/>
                            <TextBlock Padding ="5,0,5,0" FontWeight="Bold" Text="How multiple terms are combined" Grid.Row="0" Grid.Column="4"/>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </GroupBox>

            <!-- Busy Indicator: when true, it shows the progress bar, text message, plus a cancel button -->

        </DockPanel>
        <controls:BusyCancelIndicator x:Name="BusyCancelIndicator" IsBusy="False" CancelClick="CancelAsyncOperationButton_Click" Grid.Row="0"/>
    </Grid>
</controls:BusyableDialogWindow>
